{
  "name": "octogit",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:KnisterPeter/octogit.git",
  "author": "Markus Wolf <mail@markus-wolf.de>",
  "license": "MIT",
  "engines": {
    "node": "14.16.1"
  },
  "volta": {
    "node": "14.16.1"
  },
  "scripts": {
    "update-hooks": "yarn simple-git-hooks",
    "build": "tsc",
    "test": "jest",
    "fmt:run": "prettier '*.{md,json}' 'src/**/*.{json,ts}'",
    "fmt:check": "yarn fmt:run --check",
    "fmt": "yarn fmt:run --write"
  },
  "dependencies": {
    "@octokit/plugin-throttling": "^3.4.1",
    "@octokit/rest": "^18.5.3",
    "simple-git": "^2.38.0",
    "supports-color": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.13.16",
    "@babel/plugin-transform-modules-commonjs": "7.13.8",
    "@types/babel__core": "7.1.14",
    "@types/jest": "26.0.23",
    "@types/prettier": "2.2.3",
    "dotenv": "8.2.0",
    "esbuild": "0.11.15",
    "esbuild-jest": "0.5.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "nanoid": "3.1.22",
    "prettier": "2.2.1",
    "simple-git-hooks": "2.4.1",
    "typescript": "4.2.4"
  },
  "prettier": {},
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": [
        "esbuild-jest",
        {
          "sourcemap": true
        }
      ]
    }
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged"
  },
  "lint-staged": {
    "*.{md,json}": "yarn fmt",
    "src/**/*.{json,ts}": "yarn fmt"
  }
}
